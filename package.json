{
  "name": "hue-radar",
  "version": "1.0.2",
  "description": "ğŸ¨ A tool for discovering all of the colors used in your project.",
  "main": "bin/index.js",
  "bin": {
    "hue-radar": "bin/index.js"
  },
  "scripts": {
    "build": "tsc && cpy ./src/templates/** ./bin/templates/",
    "lint": "eslint src/**/*.ts --report-unused-disable-directives",
    "lint:fix": "eslint src/**/*.ts --fix --report-unused-disable-directives",
    "lint:pre-commit": "eslint --fix --report-unused-disable-directives",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:coverage:view": "npm run test:coverage && open ./coverage/lcov-report/index.html -a Google\\ Chrome",
    "ci": "npm run lint && npm run test:coverage",
    "test": "npm run lint && npm run test:unit",
    "release": "np --no-yarn"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "chalk": "^4.1.0",
    "chroma-js": "^2.1.0",
    "commander": "^6.2.0",
    "globby": "^11.0.1",
    "hex-color-regex": "^1.1.0",
    "hsl-regex": "^1.0.0",
    "hsla-regex": "^1.0.0",
    "read-pkg-up": "^7.0.1",
    "rgb-regex": "^1.0.1",
    "rgba-regex": "^1.0.0"
  },
  "devDependencies": {
    "@types/byline": "^4.2.32",
    "@types/chroma-js": "^2.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.12.1",
    "eslint-config-himynameisdave": "^3.0.0-rc5",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.5.0",
    "np": "^6.5.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint:pre-commit"
  },
  "keywords": [
    "color",
    "colors",
    "color-finder",
    "css",
    "css-audit"
  ],
  "author": {
    "name": "Dave Lunny",
    "email": "d@velunny.com",
    "url": "https://himynameisdave.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himynameisdave/hue-radar.git"
  },
  "homepage": "https://github.com/himynameisdave/hue-radar",
  "license": "MIT",
  "private": false
}
