{
  "name": "hue-radar",
  "version": "2.0.0",
  "description": "ğŸ¨ A tool for discovering all of the colors used in your project.",
  "main": "bin/index.js",
  "bin": {
    "hue-radar": "bin/index.js"
  },
  "scripts": {
    "build": "tsc && cpy ./src/templates/** ./bin/templates/",
    "lint": "eslint src/**/*.ts --report-unused-disable-directives",
    "lint:fix": "eslint src/**/*.ts --fix --report-unused-disable-directives",
    "lint:pre-commit": "eslint --fix --report-unused-disable-directives",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:view": "npm run test:coverage && open ./coverage/lcov-report/index.html -a Google\\ Chrome",
    "ci": "npm run lint && npm run test:coverage",
    "test": "npm run lint && npm run test:unit",
    "release": "np --no-yarn"
  },
  "engines": {
    "node": ">= 12"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "chalk": "^4.1.0",
    "chroma-js": "^2.1.0",
    "commander": "^8.3.0",
    "globby": "^11.0.2",
    "hex-color-regex": "^1.1.0",
    "hsl-regex": "^1.0.0",
    "hsla-regex": "^1.0.0",
    "read-pkg-up": "^7.0.1",
    "rgb-regex": "^1.0.1",
    "rgba-regex": "^1.0.0"
  },
  "devDependencies": {
    "@types/byline": "^4.2.32",
    "@types/chroma-js": "^2.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.19.0",
    "eslint-config-himynameisdave": "^4.0.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^27.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "np": "^7.2.0",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint:pre-commit"
  },
  "keywords": [
    "color",
    "colors",
    "color-finder",
    "css",
    "css-audit"
  ],
  "author": {
    "name": "Dave Lunny",
    "email": "d@velunny.com",
    "url": "https://himynameisdave.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himynameisdave/hue-radar.git"
  },
